
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"> 
    <meta http-equiv="Pragma" content="no-cache"> 
    <meta http-equiv="Cache-Control" content="no-cache"> 
    <meta http-equiv="Expires" content="0"> 
    <title>后台登录</title> 
    <link href="/Content/login.css" type="text/css" rel="stylesheet"> 
</head> 
<body> 

<div class="login">
    <div class="message">管理登录</div>
    <div id="darkbannerwrap"></div>
    
    <form method="post">
        <input name="action" value="login" type="hidden">
        <input id="username" placeholder="用户名" required="" type="text">
        <hr class="hr15">
        <input id="password" placeholder="密码" required="" type="password">
        <hr class="hr15">
        <input value="登录" style="width:100%;" id="sum" type="button">
        <hr class="hr20">
        <a href="/Login/logon">去注册</a>
    </form>

	
</div>

<script src="https://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
<script>
    $("#sum").click(function() {
        $.post("/login",
            {
                username: $("#username").val(),
                password: $("#password").val()
            }, function(data) {
                if (data == "登陆成功") {
                    if (document.referrer == "" || document.referrer.toLowerCase().indexOf("log") > -1) {
                        location.href = "/";
                    } else {
                        location.href = document.referrer;
                    }
                } else {
                    alert("用户名或密码错误");
                }
            })
    })
</script>
</body>
</html>